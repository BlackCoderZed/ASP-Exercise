@model ASP_Exercise.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-lg-4">
        @if (Model != null)
        {
            <div>
                
                <table class="table table-striped table-bordered">
                    <tr>
                        <td>ID</td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td>Name</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Membership Type</td>
                        <td>@Model.MembershipType.Type</td>
                    </tr>
                    <tr>
                        <td>Subscribed To Newsletter</td>
                        <td>@Model.isSubscribedToNewsletter</td>
                    </tr>
                </table>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        }
        else
        {
            <text>No record</text>
        }
    </div>
</div>



